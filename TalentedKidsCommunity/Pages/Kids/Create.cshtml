@page
@model TalentedKidsCommunity.Pages.Kids.CreateModel

@{
    ViewData["Title"] = "Enroll a new kid";
}

<h1>Enroll a new kid</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Kid.LastName" class="control-label"></label>
                <input asp-for="Kid.LastName" class="form-control" />
                <span asp-validation-for="Kid.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kid.FirstName" class="control-label"></label>
                <input asp-for="Kid.FirstName" class="form-control" />
                <span asp-validation-for="Kid.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kid.Age" class="control-label"></label>
                <input asp-for="Kid.Age" class="form-control" />
                <span asp-validation-for="Kid.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kid.EnrollmentDate" class="control-label"></label>
                <input asp-for="Kid.EnrollmentDate" class="form-control" />
                <span asp-validation-for="Kid.EnrollmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add the kid" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
