@page
@model TalentedKidsCommunity.Pages.Kids.DetailsModel

@{
    ViewData["Title"] = @Model.Kid.FullName;
}

<h1>Details of @Model.Kid.FullName </h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kid.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kid.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kid.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kid.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kid.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kid.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kid.EnrollmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kid.EnrollmentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kid.Enrollments)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Course Day</th>
                    <th>Course Fee</th>
                </tr>
                @foreach (var item in Model.Kid.Enrollments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.CourseDay)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.CourseFee)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Kid.KidID">Edit Details</a> |
    <a asp-page="./Index">Back to List</a>
</div>
