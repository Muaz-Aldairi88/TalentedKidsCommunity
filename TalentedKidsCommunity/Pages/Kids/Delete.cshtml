@page
@model TalentedKidsCommunity.Pages.Kids.DeleteModel

@{
    ViewData["Title"] = "Unenroll a kid";
}

<h1>Unenroll a kid</h1>
<p class="text-danger">@Model.ErrorMessage</p>
<h3>Are you sure you want to unroll @Model.Kid.FirstName?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kid.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kid.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kid.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kid.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kid.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kid.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kid.EnrollmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kid.EnrollmentDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Kid.KidID" />
        <input type="submit" value="Unenroll" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
